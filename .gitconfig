[core]
	excludefile = ~/.gitignore_global

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  lg = log --graph --all --format='%C(auto)%h%d %C(auto,bold black)<%C(reset)%C(auto,blue)%aE%C(auto,bold black)>%C(reset) %s %C(auto,bold black)(%C(reset)%C(auto,green)%ar%C(auto,bold black))%C(reset)'
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[push]
	default = simple

[color]
	ui          = true
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto

[color "status"]
	header		= normal
	added		= green
	updated		= cyan
	changed		= yellow
	untracked	= red
	nobranch	= red
	branch		= normal bold

[user]
